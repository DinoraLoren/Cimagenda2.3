<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uabc.dario.cimagenda20.Home"
    tools:showIn="@layout/app_bar_home">

    <Button
        android:id="@+id/iv_agenda"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/iv_agenda"
        android:text="@string/agenda"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/iv_horario"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/iv_horario"
        android:text="@string/horario"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_agenda"
        android:layout_marginLeft="0dp" />

    <Button
    android:id="@+id/iv_calendario"
    android:layout_width="wrap_content"
    android:layout_height="65dp"
    android:background="@drawable/iv_calendario"
    android:text="@string/calendario"
    android:textStyle="normal"
    android:textColor="@color/colorPrimaryDark"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    tools:layout_constraintTop_creator="1"
    android:layout_marginTop="75dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@id/iv_horario"
    android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/iv_materias"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/iv_materias"
        android:text="@string/materias"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_calendario"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/iv_usuario"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/iv_usuario"
        android:text="@string/usuario"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_materias"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
